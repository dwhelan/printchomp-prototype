doctype html
html
  head
    title Printchomp
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1"
    =stylesheet_link_tag "application"
    =javascript_include_tag "application"
        
  body 
  
    .container-fluid
      header id="header"
        h1 Printchomp
      
      section#content
        #sidebar

          .printer-info
            .logo
            h1 Business Ninja
            a http://www.businessninja.com
            
          p.profile-completeness Profile Completeness  
          .progress
            .progress-bar role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;"
              span.sr-only 60% Complete
        
          nav#navigation 
            ul
              li
                = link_to "Dashboard", root_path
              li
                = link_to "Orders", orders_path
              li
                = link_to "Quotes", quotes_path
              li
                = link_to "Products", products_path
              li
                = link_to "Offers", offers_path
              li
                = link_to "Statistics", statistics_path
        
        == yield